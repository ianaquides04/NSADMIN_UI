<!-- Bootstrap JS -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // ================= ADD DISPATCHER FIX =================
    const addModalEl = document.getElementById('dispatcherModal');
    const addConfirmEl = document.getElementById('saveConfirmModal');
    const addModal = new bootstrap.Modal(addModalEl, { backdrop: 'static', keyboard: false });
    const addConfirm = new bootstrap.Modal(addConfirmEl, { backdrop: 'static', keyboard: false });

    const btnAddSave = document.getElementById('saveBtn');
    const btnAddConfirmSave = addConfirmEl.querySelector('.btn-save');  // FIX: Selects the correct Save button
    const btnAddCancelSave = addConfirmEl.querySelector('.btn-outline-save'); // FIX: Selects Cancel button

    // Save flow
    btnAddSave.addEventListener('click', () => {
        addModal.hide();
        addModalEl.addEventListener('hidden.bs.modal', () => addConfirm.show(), { once: true });
    });

    btnAddConfirmSave.addEventListener('click', () => {
        addConfirm.hide();
        addModal.show();
    });

    btnAddCancelSave.addEventListener('click', () => {
        addConfirm.hide();
        addModal.show();
    });

    // Prevent closing by clicking background
    [addModalEl, addConfirmEl].forEach(modal =>
        modal.addEventListener('click', e => {
            if (e.target === modal) e.stopPropagation();
        })
    );

    // ================= UPDATE DISPATCHER FIX =================
    // FIX: Match correct ID names
    document.querySelectorAll('[id^="UpdatedriverModal-"]').forEach(modalEl => {
        const id = modalEl.id.split('-')[1];
        const updateModal = new bootstrap.Modal(modalEl, { backdrop: 'static', keyboard: false });

        const confirmModalEl = document.getElementById('saveConfirmModal-' + id);
        const confirmModal = new bootstrap.Modal(confirmModalEl, { backdrop: 'static', keyboard: false });

        const btnSave = document.getElementById('saveBtn-' + id);
        const btnCancel = modalEl.querySelector('[data-bs-dismiss="modal"]');
        const btnConfirmSave = confirmModalEl.querySelector('.btn-save');  // FIX: Selects Save
        const btnCancelSave = confirmModalEl.querySelector('.btn-outline-save'); // FIX: Selects Cancel

        // Save flow
        if (btnSave) {
            btnSave.addEventListener('click', () => {
                updateModal.hide();
                modalEl.addEventListener('hidden.bs.modal', () => confirmModal.show(), { once: true });
            });
        }

        if (btnConfirmSave) {
            btnConfirmSave.addEventListener('click', () => {
                confirmModal.hide();
                updateModal.show();
            });
        }

        if (btnCancelSave) {
            btnCancelSave.addEventListener('click', () => {
                confirmModal.hide();
                updateModal.show();
            });
        }

        if (btnCancel) {
            btnCancel.addEventListener('click', () => {
                updateModal.hide();
            });
        }

        // Prevent closing by clicking background
        [modalEl, confirmModalEl].forEach(m =>
            m.addEventListener('click', e => {
                if (e.target === m) e.stopPropagation();
            })
        );
    });
</script>
