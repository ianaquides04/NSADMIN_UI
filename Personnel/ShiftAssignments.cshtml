        <table class="table">
            <thead>
                <tr>
                    <th>
                        <button class="sortbtn">
                            <a class="sortlbl" asp-action="Shifts" asp-route-sortOrder="@ViewData["IndexSort"]">
                                # <i class='bx bxs-sort-alt'></i>
                            </a>
                        </button>
                    </th>
                    <th>
                        <button class="sortbtn">
                            <a class="sortlbl" asp-action="Shifts" asp-route-sortOrder="@ViewData["NameSort"]">
                                Driver<i class='bx bxs-sort-alt'></i>
                            </a>
                        </button>
                    </th>
                    @* <th>Bus</th>
                    <th>Route</th> *@
                    <th>Assigned by</th>
                    <th>Status</th>
                    <th>Trips</th>
                    <th>Actions</th>
                </tr>
            </thead>

            @if (Model.ShiftAssign != null && Model.ShiftAssign.Count > 0)
            {
                <tbody>
                    @for (int i = 0; i < Model.ShiftAssign.Count; i++)
                    {
                        <tr>
                            @* <td>@(i+1)</td> *@
                            <td>@Model.ShiftAssign[i].Id</td>
                            <td>@Model.ShiftAssign[i].driver</td>
                            @* <td>@Model.ShiftAssign[i].busID</td>
                            <td>@Model.ShiftAssign[i].routeID</td> *@
                            <td>@Model.ShiftAssign[i].assignedByAccountName</td>
                            @* <td>@Model[i].assignmentDate</td> *@
                            <td>@Model.ShiftAssign[i].status</td>
                            <td>
                                <button class="btn btn-primary btn-sm">
                                    <a class="managelbl" asp-controller="Personnel" asp-action="TripCreate" asp-route-driver="@Model.ShiftAssign[i].driver" asp-route-shiftAssign="@Model.ShiftAssign[i].Id">
                                        Manage
                                    </a>
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-warning btn-sm" @* data-bs-toggle="modal" data-bs-target="#EditshiftAssignModal-@Model[i].Id" *@>
                                    <i class='bx bxs-edit'></i>
                                </button>

                                <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                                    <i class='bx bxs-x-square'></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tbody>
                    <tr><td colspan="7" style="text-align: center;">No assignment available.</td></tr>
                </tbody>
            }
        </table>
    </div>
</div>

