<!-- Shift Assignment Modal -->
<div class="modal fade" id="shiftAssignModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header custom-header">
                    <h4 class="modal-title">Shift Assignments</h4>
                </div>

                <div class="modal-body">
                <form id="shiftAssignForm" asp-action="CreateShift" method="post">
                    <input type="hidden" name="shiftID" value="@ViewBag.Shift" />
                        <div class="row mb-3">
                            <div class="col-md-6 d-flex flex-column">
                                <div>
                                    <label class="form-label">Driver</label>
                                    <select class="form-select" name="driverID" id="driverID">
                                    @if (Model.ShiftAssign_Driver != null && Model.ShiftAssign_Driver.Count > 0)
                                        {
                                            <option value="">-- Select --</option>
                                        @foreach (var d in Model.ShiftAssign_Driver)
                                            {
                                                @if(!ShiftAssignmentsController.IsDriverAlreadyAssigned(d.Id, ViewBag.Shift))
                                                {
                                                    <option value="@d.Id">@d.FirstName @d.LastName</option>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <option value="">-- No available driver --</option>
                                        }
                                    </select>
                                </div>

                                <div class="mt-auto pt-3">
                                    <div class="text-end d-flex justify-content-start gap-2">
                                        <button type="button" id="saveBtn" class="btn btn-save text-white px-4">Assign</button>
                                        <button type="button" class="btn btn-outline-save px-4" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 d-flex flex-column">
                                <label class="form-label">Status</label>
                                <div class="border rounded p-3">
                                    <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="status" id="assigned"  value="Assigned">
                                        <label class="form-check-label radio-label" for="assigned">Assigned</label>
                                    </div>
                                    <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="status" id="active" value="Active">
                                        <label class="form-check-label radio-label" for="active">Active</label>
                                    </div>
                                    <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="status" id="cancelled" value="Cancelled">
                                        <label class="form-check-label radio-label" for="cancelled">Cancelled</label>
                                    </div>
                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="status" id="completed" value="Completed">
                                        <label class="form-check-label radio-label" for="completed">Completed</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </div>

